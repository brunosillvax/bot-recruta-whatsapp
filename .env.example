# ============================================
# CONFIGURAÇÕES DO BOT DE WHATSAPP - RECRUTA ZERO
# ============================================
# Este é um arquivo de exemplo. Copie para .env e preencha com seus valores reais.
# NUNCA commite o arquivo .env para o controle de versão!

# ============================================
# LOGGING
# ============================================
# Nível de log: debug, info, warn, error
# Padrão: info
LOG_LEVEL=info

# ============================================
# WHATSAPP
# ============================================
# ID do grupo do WhatsApp onde o bot vai operar
ALLOWED_GROUP_ID=120363420675199775@g.us

# JID do líder do clã (para menções em advertências)
LEADER_JID=5527996419901@s.whatsapp.net

# ============================================
# DISCORD WEBHOOK
# ============================================
# URL do Webhook do Discord para enviar o QR Code
DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/SEU_WEBHOOK_AQUI

# ============================================
# FIREBASE
# ============================================
# Credenciais do Firebase Service Account (JSON codificado em Base64)
FIREBASE_SERVICE_ACCOUNT_BASE64=

# ============================================
# CONFIGURAÇÕES DO BOT
# ============================================
# Tolerância para busca de nomes
SEARCH_TOLERANCE=3

# Tempo em minutos para sessão expirar
SESSION_TIMEOUT_MINUTES=5

# ============================================
# LEMBRETES AUTOMÁTICOS
# ============================================
AUTO_REMINDER_ENABLED=false
TIMEZONE=America/Sao_Paulo
REMINDER_SCHEDULE_QUINTA=0 21 * * 4
REMINDER_SCHEDULE_SEXTA=0 21 * * 5
REMINDER_SCHEDULE_SABADO=0 21 * * 6
REMINDER_SCHEDULE_DOMINGO=0 20 * * 0

# ============================================
# DIVISÕES DO RANKING
# ============================================
RANKING_ELITE_MIN_POINTS=3000
RANKING_HIGH_PERFORMANCE_MIN_POINTS=2500
RANKING_ON_TRACK_MIN_POINTS=2000
RANKING_ATTENTION_ZONE_MIN_POINTS=0

# ============================================
# PERFORMANCE E CONFIABILIDADE
# ============================================
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY_MS=1000
RETRY_MAX_DELAY_MS=10000
CACHE_ENABLED=true
MESSAGE_THROTTLING_ENABLED=true
MESSAGE_RATE_LIMIT_PER_MINUTE=20
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_MS=300000
